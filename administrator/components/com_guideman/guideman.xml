	<author><![CDATA[Koenraad Vandezande]]></author>
	<creationDate><![CDATA[16 Apr 2018]]></creationDate>
	<copyright><![CDATA[ManageGuides.com]]></copyright>
	<authorEmail><![CDATA[koen@rioguides.com]]></authorEmail>
	<authorUrl><![CDATA[www.manageguides.com]]></authorUrl>
	<version><![CDATA[2.2.7]]></version>
	<license><![CDATA[GNU]]></license>
	<description><![CDATA[Manage your guides]]></description>

	<files folder="site">
		<folder>_fork</folder>
		<folder>controllers</folder>
		<folder>css</folder>
		<folder>files</folder>
		<folder>images</folder>
		<folder>layouts</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>controller.php</filename>
		<filename>guideman.php</filename>
		<filename>index.html</filename>
		<filename>menu.xml</filename>
		<filename>router.php</filename>
	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB.com_guideman.ini</language>
	</languages>

	<administration>

		<files folder="admin">
			<folder>_fork</folder>
			<folder>classes</folder>
			<folder>controllers</folder>
			<folder>css</folder>
			<folder>helpers</folder>
			<folder>images</folder>
			<folder>js</folder>
			<folder>layouts</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>guideman.php</filename>
			<filename>index.html</filename>
			<filename>menu.xml</filename>
		</files>

		<languages folder="admin">
			<language tag="en-GB">language/en-GB.com_guideman.ini</language>
			<language tag="en-GB">language/en-GB.com_guideman.sys.ini</language>
		</languages>
		<menu img="components/com_guideman/images/icon-16-guideman.png">GUIDEMAN_MENU_GUIDEMANV2</menu>

		<submenu/>
	</administration>
	<scriptfile>script.php</scriptfile>

	<install>

		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>

	<update>

		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<uninstall>

		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
</extension>