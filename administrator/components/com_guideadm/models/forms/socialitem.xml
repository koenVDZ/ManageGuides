<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="socialitem.admsocialitemform"
			addfieldpath="/administrator/components/com_guideadm/models/fields"
			label="GUIDEADM_JFORM_SOCIAL_CONTACT_DETAILS">

		<field name="catid"
				alias="_catid_MGcat"
				label="GUIDEADM_FIELD_CATEGORY"
				filter="INT"
				listKey="id"
				labelKey="MGcat"
				type="ckcombo"
				nullLabel="GUIDEADM_JSEARCH_SELECT_CATEGORY"
				validate="default"
				class=""/>

		<field name="user_id"
				alias="_user_id_name"
				label="GUIDEADM_FIELD_NAME"
				filter="INT"
				description="GUIDEADM_FIELD_USER_ID"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="GUIDEADM_JSEARCH_SELECT_NAME"
				validate="default"
				msg-info="GUIDEADM_VALIDATOR_USER_ID"
				required="true"
				class="validate[required]"/>

		<field name="labelid"
				alias="_labelid_type"
				label="GUIDEADM_FIELD_TYPE"
				filter="INT"
				listKey="id"
				labelKey="type"
				type="ckcombo"
				nullLabel="GUIDEADM_JSEARCH_SELECT_TYPE"
				validate="default"
				class=""/>

		<field name="name"
				alias="name"
				label="GUIDEADM_FIELD_NAME"
				filter="STRING"
				type="cktext"
				required="true"
				class="validate[required]"/>

		<field name="creation_date"
				alias="creation_date"
				label="GUIDEADM_FIELD_CREATION_DATE"
				filter="STRING"
				type="calendar"
				format="%Y-%m-%d"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				showtime="false"/>

		<field name="created_by"
				alias="_created_by_name"
				label="GUIDEADM_FIELD_CREATED_BY"
				filter="INT"
				access="core.edit"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="GUIDEADM_JSEARCH_SELECT_CREATED_BY"
				validate="default"
				class=""/>

		<field name="modification_date"
				alias="modification_date"
				label="GUIDEADM_FIELD_MODIFICATION_DATE"
				filter="STRING"
				type="calendar"
				format="%Y-%m-%d"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				showtime="false"/>

		<field name="modified_by"
				alias="_modified_by_name"
				label="GUIDEADM_FIELD_MODIFIED_BY"
				filter="INT"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				nullLabel="GUIDEADM_JSEARCH_SELECT_MODIFIED_BY"/>

		<field name="ordering"
				alias="ordering"
				label="GUIDEADM_FIELD_ORDERING"
				filter="INT"
				access="core.edit.state"
				type="ckordering"
				labelKey="catid"
				validate="default"
				class=""/>

		<field name="published"
				default="0"
				alias="published"
				label="GUIDEADM_FIELD_PUBLISHED"
				filter="INT"
				access="core.edit.state"
				listKey="value"
				type="ckstate">
			<option value="0" icon="icomoon-cancel" color="danger">GUIDEADM_FIELDS_BOOL_NO</option>
			<option value="1" icon="icomoon-ok" color="success">GUIDEADM_FIELDS_BOOL_YES</option>
		</field>
	</fieldset>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_guideadm/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="GUIDEADM_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="filter_catid"
				listKey="id"
				labelKey="MGcat"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEADM_FILTER_NULL_CATEGORY"
				class="span-2 element-filter"
				label="GUIDEADM_JSEARCH_CATEGORY"
				ui="chosen"/>

		<field name="filter_user_id"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEADM_FILTER_NULL_NAME"
				class="span-2 element-filter"
				label="GUIDEADM_JSEARCH_NAME"
				ui="chosen"/>

		<field name="filter_labelid"
				listKey="id"
				labelKey="type"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEADM_FILTER_NULL_LABEL_TYPE_1"
				class="span-2 element-filter"
				label="GUIDEADM_JSEARCH_LABEL_TYPE_1"
				ui="chosen"/>

		<field name="filter_creation_date"
				type="calendar"
				placeholder="GUIDEADM_FILTER_NULL_CREATION_DATE"
				format="%Y-%m-%d"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				showtime="false"
				onchange="this.form.submit();"
				label="GUIDEADM_JSEARCH_CREATION_DATE"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_created_by"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEADM_FILTER_NULL_CREATED_BY"
				class="span-2 element-filter"
				label="GUIDEADM_JSEARCH_CREATED_BY"
				ui="chosen"/>

		<field name="filter_modification_date"
				type="calendar"
				placeholder="GUIDEADM_FILTER_NULL_MODIFICATION_DATE"
				format="%Y-%m-%d"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				showtime="false"
				onchange="this.form.submit();"
				label="GUIDEADM_JSEARCH_MODIFICATION_DATE"
				class="element-filter"
				ui="chosen"/>

		<field name="filter_modified_by"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEADM_FILTER_NULL_MODIFIED_BY"
				class="span-2 element-filter"
				label="GUIDEADM_JSEARCH_MODIFIED_BY"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="GUIDEADM_FILTER_NULL_NAME"
				label="GUIDEADM_JSEARCH_NAME"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_guideadm/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="GUIDEADM_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>