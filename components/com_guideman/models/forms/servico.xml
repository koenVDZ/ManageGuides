<?xml version="1.0" encoding="utf-8"?>


<form>

	<fieldset name="default.filters" addfieldpath="/administrator/components/com_guideman/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="GUIDEMAN_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="filter_country"
				listKey="id"
				labelKey="country_name"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEMAN_FILTER_NULL_COUNTRY_COUNTRY_NAME"
				class="span-2 element-filter"
				label="GUIDEMAN_JSEARCH_COUNTRY_COUNTRY_NAME"
				ui="chosen"/>

		<field name="filter_state"
				listKey="id"
				labelKey="state"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEMAN_FILTER_NULL_STATE_STATE"
				class="span-2 element-filter"
				label="GUIDEMAN_JSEARCH_STATE_STATE"
				ui="chosen"/>

		<field name="filter_policy"
				listKey="id"
				labelKey="name"
				type="ckcombo"
				submit="true"
				nullLabel="GUIDEMAN_FILTER_NULL_POLICY_NAME"
				class="span-2 element-filter"
				label="GUIDEMAN_JSEARCH_POLICY_NAME"
				ui="chosen"/>

		<field name="filter_creation_date_from"
				placeholder="GUIDEMAN_FILTER_CREATION_DATE_CREATION_DATE_FROM"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"
				onchange="this.form.submit();"
				label="GUIDEMAN_JSEARCH_CREATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="filter_creation_date_to"
				placeholder="GUIDEMAN_FILTER_CREATION_DATE_CREATION_DATE_TO"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"
				onchange="this.form.submit();"
				label="GUIDEMAN_JSEARCH_CREATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="filter_modification_date_from"
				placeholder="GUIDEMAN_FILTER_MODIFICATION_DATE_MODIFICATION_DATE_FROM"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"
				onchange="this.form.submit();"
				label="GUIDEMAN_JSEARCH_MODIFICATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="filter_modification_date_to"
				placeholder="GUIDEMAN_FILTER_MODIFICATION_DATE_MODIFICATION_DATE_TO"
				type="calendar"
				format="%Y-%m-%d %H:%M"
				filter="USER_UTC"
				todaybutton="true"
				weeknumbers="false"
				filltable="true"
				singleheader="false"
				minyear="-100"
				maxyear="+50"
				timeformat="24"
				onchange="this.form.submit();"
				label="GUIDEMAN_JSEARCH_MODIFICATION_DATE"
				class="element-filter input-small"
				ui="chosen"/>

		<field name="search_search"
				type="cksearch"
				placeholder="GUIDEMAN_FILTER_NULL_INTERNAL_SERVICE_ID_SERVICE_NAME_DURATION_MEALS_ACTIVITY_LEVEL_IMAGE_01_IMAGE_02_IMAGE_03_IMAGE_04_IMAGE_05"
				label="GUIDEMAN_JSEARCH_INTERNAL_SERVICE_ID_SERVICE_NAME_DURATION_MEALS_ACTIVITY_LEVEL_IMAGE_01_IMAGE_02_IMAGE_03_IMAGE_04_IMAGE_05"
				class="element-filter element-search search-query"
				ui="chosen"/>

		<field name="sortTable"
				type="cksort"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JGLOBAL_SORT_BY"
				class="span-2 element-filter"
				label="Sort by"
				ui="chosen"/>

		<field name="directionTable"
				type="ckdirection"
				responsive="hidden-phone"
				submit="true"
				nullLabel="JFIELD_ORDERING_DESC"
				class="span-2 element-filter"
				label="Direction"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>

	<fieldset name="modal.filters" addfieldpath="/administrator/components/com_guideman/models/fields">

		<field name="filter_published"
				type="ckstate"
				access="core.edit.state"
				submit="true"
				nullLabel="GUIDEMAN_FILTER_NULL_SELECT_STATE"
				display="combo"
				label="State"
				class="element-filter span-2"
				ui="chosen"/>

		<field name="limit"
				type="cklimit"
				submit="true"
				class="element-filter"
				label="Limit"
				ui="chosen"/>
	</fieldset>
</form>